<div class='text-left'>
  <h2>{{post.title}}</h2>
  <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  <p>{{post.text}}</p>
  {{#if (eq thisUser post.user_id)}}
    <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Update</button>
    <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
  {{/if}}
</div>
{{#if logged_in}}
  <div>
    <h3>New Comment</h3>
    <form class='form new-comment-form'>
      <div class='form-group'>
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <textarea class='form-input' id='comment-text' name='comment-text'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Post</button>
      </div>
    </form>
  </div>
  <div>
    {{> comments comments = comments}}
  </div>
  {{/if}}