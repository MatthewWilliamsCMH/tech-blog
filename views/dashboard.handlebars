<!--I've commented out the unneeded delete button below until I can restyle the app, at which point, that whole div will be unneeded.-->
<div>
  <div>
    <h3>Create a New Post</h3>

    <form id='newPstFrm'>
      <div>
        <label for='pstTitle'>Title</label>
        <input id='pstTitle' type='text' name='pstTitle' />
      </div>
      <div>
        <label for='pstText'>Text</label>
        <textarea id='pstText' name='pstText'></textarea>
      </div>
      <div>
        <button type='submit'>Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div>
      <h3>Your Posts</h3>
      {{#each posts as |post|}}
        <div>
          <h4><a href='api/posts/{{post.id}}'>{{post.title}}</a></h4>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/post.js'></script>