<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Update a Post</h3>

    <form class='form upd-post-form'>
      <div class='form-group'>
        <label for='upd-title'>Title</label>
        <input class='form-input' type='text' id='upd-title' name='upd-title' value={{post.title}}/>
      </div>
      <div class='form-group'>
        <label for='upd-text'>Text</label>
        <textarea class='form-input' id='upd-text' name='upd-text'>{{post.text}}</textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Save</button>
      </div>
    </form>
  </div>
</div>

