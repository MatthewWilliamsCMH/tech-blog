<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Update a Post</h3>
    <form class='form upd-post-form'>
      <div id='post-data' data-id='{{post.id}}'></div>
      <div class='form-group'>
        <label for='post-title'>Title</label>
        <input id='post-title' class='form-input' type='text' name='post-title' value='{{post.title}}'/>
      </div>
      <div class='form-group'>
        <label for='post-text'>Text</label>
        <textarea id='post-text' class='form-input' name='post-text'>{{post.text}}</textarea>
      </div>
      <div class='form-group'>
        <button id="savePstBtn" class='btn btn-primary'>Save</button>
      </div>
    </form>
  </div>
</div>

<script src='/js/update.js'></script>